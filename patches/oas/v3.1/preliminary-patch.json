[
  {
    "op": "test",
    "path": "/$defs/path-item-or-reference",
    "value": {
      "if": {"type": "object", "required": ["$ref"]},
      "then": {"$ref": "#/$defs/reference"},
      "else": {"$ref": "#/$defs/path-item"}
    }
  },
  {
    "op": "remove",
    "path": "/$defs/path-item-or-reference"
  },
  {
    "op": "add",
    "path": "/$defs/path-item/properties/$ref",
    "value": {"type": "string", "format": "uri-reference"}
  },
  {
    "op": "replace",
    "path": "/properties/webhooks/additionalProperties",
    "value": {"$ref": "#/$defs/path-item"}
  },
  {
    "op": "replace",
    "path": "/$defs/callbacks/additionalProperties",
    "value": {"$ref": "#/$defs/path-item"}
  },
  {
    "op": "replace",
    "path": "/$defs/components/properties/pathItems/additionalProperties",
    "value": {"$ref": "#/$defs/path-item"}
  }
]
